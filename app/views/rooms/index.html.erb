<style>
  .vl {
    border-left: 6px solid green;
    height: 500px;
  }
</style>

<div id="chatroom_container" class="d-flex row bg-dark text-light">
  <div class="col-md-4 col-sm-4">
    <div id="side_panel">
      <h5> Hi <%= @current_user %> </h5>
      <h4> Users </h4>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
      <h4> Rooms </h4>
      <%= render partial: "layouts/new_room_form" %>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>

  <div class="vl col-md-1"></div>

  <div id="room_container" class="col-md-7 col-sm-8 bg-dark text-light">
    <% if @single_room %>
      <div id="single_room">
        <h4 class="text-center"><%= @user&.email || @single_room.name %> </h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages">
          <%= render @messages %>
        </div>
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
