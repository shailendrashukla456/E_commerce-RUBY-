<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha256-BLAHBLAH...">
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-BLAHBLAH..."></script>
    
    <!-- Bootstrap JavaScript and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha256-BLAHBLAH..."></script>
  
   <style>
      <%=  " .msg-#{current_user&.id }"%> {
        background-color: #007bff !important
        padding: 10px;
      }

      <%=  " .cont-#{current_user&.id }"%>{
       display: flex;
       justify-content: flex-end;
      }
   </style>

 


    
  <body>
     <%= render "shared/navigation" %>
     <% if flash[:notice].present? %>
        <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
     
    <% end %>

   
    <%= yield %>
   
    <%= render "shared/footer" %>
     
   
  </body>
</html>
